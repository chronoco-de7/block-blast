{
  "name": "block-blast",
  "version": "1.0.0",
  "description": "A beautiful block puzzle game with neon glass aesthetics",
  "main": "main.js",
  "author": "Vector",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "portable:win": "electron-builder --win portable",
    "zip:mac": "electron-builder --mac zip",
    "appimage:linux": "electron-builder --linux AppImage",
    "unpacked": "electron-builder --dir"
  },
  "keywords": [
    "game",
    "puzzle",
    "block-blast",
    "electron"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.blockblast.neon",
    "productName": "Block Blast",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "src/**/*",
      "assets/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "build/**/*"
    ],
    "asar": true,
    "compression": "maximum",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.games",
      "icon": "build/icon.icns",
      "target": [
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "portable"
      ],
      "publisherName": "Vector"
    },
    "linux": {
      "category": "Game",
      "icon": "build/icon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}